<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Kullanıcı Adı ve E-posta Görüntüleme -->


    <TextView
        android:id="@+id/tvAdminEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-posta: "
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"/>

    <!-- Kullanıcı Bilgilerini Güncelleme -->


    <EditText
        android:id="@+id/etNewAdminEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yeni E-posta"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/btnUpdateAdminInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bilgileri Güncelle"
        android:layout_marginTop="16dp" />

    <!-- Şifre Sıfırlama -->
    <EditText
        android:id="@+id/etOldAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Eski Şifre"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/etNewAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yeni Şifre"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"

        android:minHeight="48dp"/>

    <Button
        android:id="@+id/btnAdminResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Şifreyi Sıfırla"
        android:layout_marginTop="16dp" />

</LinearLayout>